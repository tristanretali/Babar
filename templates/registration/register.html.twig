{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	<div class="flex flex-col justify-center items-center lg:w-100 min-h-[75vh]">
		<h1 class="mb-5 lg:text-3xl text-[7vw]">Register</h1>

		{{ form_start(registrationForm, {
			'attr': { 'class' : 'form'}
		}) }}
		{{ form_row(registrationForm.name, {
			'attr': {'class' : 'registration'}
		}) }}
		{{ form_row(registrationForm.email, {
			'attr': {'class' : 'registration'}
		}) }}
		{{ form_row(registrationForm.country, {
			'attr': {'class' : 'registration'}
		}) }}
		{{ form_row(registrationForm.plainPassword,{
				'attr': {'class' : 'registration'},
				label: 'Password'
			}) }}

		{{ form_row(registrationForm.captcha, {
				'attr': {'class' : 'registration'},
		}) }}

		<div>
			{{ form_row(registrationForm.agreeTerms, {
				'attr': {'class' : 'ml-5 items-center justify text-[#5b5555]'}
			}) }}
		</div>

		<div class="flex w-[100%] justify-center">
			<button type="submit" class="buttonLg red">Register</button>
		</div>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
