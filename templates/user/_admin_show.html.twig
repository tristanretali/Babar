<div class="text-[#5b5555]">    
    <div class="w-full flex justify-center">
        <h1 class="text-3xl dark:text-slate-100">User {{ user.name }}</h1>
    </div>
    <div class="my-4 flex flex-wrap justify-center">
        <a class="button blue" href="{{ path('app_user_index') }}">Back to list</a>
        <a class="button blue" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            <button class="button blue">Delete</button>
        </form>
    </div>
    <div class="flex justify-center">
        <table class="table">
            <tbody class="text-left dark:text-slate-100">
                <tr>
                    <th class="pt-2">Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th class="pt-2">Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th class="pt-2">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th class="pt-1">Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th class="pt-2">RegisterDate</th>
                    <td>{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="pt-2">Admin</th>
                    <td>{{ user.admin ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th class="pt-2">UserId</th>
                    <td>{{ user.userId }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>